---
interface Props {
  name: string;
  username: string;
  body: string;
}

const { name, username, body } = Astro.props;
---

<figure
  class="w-[340px] flex flex-col gap-4 bg-white p-6 rounded-lg shadow-custom"
>
  <figcaption class="flex justify-center items-center gap-4 self-stretch">
    <div class="w-12 h-12">
      <slot name="image" />
    </div>
    <div class="flex flex-col gap-px grow">
      <span class="font-semibold text-lg text-neutral-900">{name}</span>
      <span class="font-normal text-sm text-neutral-600">{username}</span>
    </div>
  </figcaption>
  <blockquote>
    <p class="font-normal text-base line-clamp-5 text-neutral-600">{body}</p>
  </blockquote>
</figure>
