---
interface Props {
  name: string;
  username: string;
  body: string;
}

const { name, username, body } = Astro.props;
---

<div
  class="w-[340px] flex flex-col gap-4 bg-white p-6 rounded-lg shadow-[0px_1px_2px_-1px_rgb(0 0 0 / 0.10), 0px_1px_3px_0_rgb(0 0 0 / 0.10)]"
>
  <div class="flex justify-center items-center gap-4 self-stretch">
    <div class="w-12 h-12">
      <slot name="image" />
    </div>
    <div class="flex flex-col gap-px grow">
      <span class="font-semibold text-lg text-neutral-900">{name}</span>
      <span class="font-normal text-sm text-neutral-600">{username}</span>
    </div>
  </div>
  <p class="font-normal text-base text-neutral-600">{body}</p>
</div>
